# Core environment variables for the FastAPI microservices
ENVIRONMENT=development
LOG_LEVEL=INFO

# Prefix variables consumed by ConfigManager (LEVERAGEGUARD_* -> nested config)
LEVERAGEGUARD_WEB3_PROVIDER_URL=http://localhost:8545
LEVERAGEGUARD_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
LEVERAGEGUARD_SECURITY_MAX_LEVERAGE_RATIO=20
LEVERAGEGUARD_MESSAGE_QUEUE_HOST=localhost
LEVERAGEGUARD_MESSAGE_QUEUE_PORT=5672
LEVERAGEGUARD_MESSAGE_QUEUE_USERNAME=guest
LEVERAGEGUARD_MESSAGE_QUEUE_PASSWORD=guest
LEVERAGEGUARD_REDIS_HOST=localhost
LEVERAGEGUARD_REDIS_PORT=6379
LEVERAGEGUARD_REDIS_DB=0
LEVERAGEGUARD_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/leverageguard

# JWT / Auth settings
LEVERAGEGUARD_AUTH_SECRET_KEY=change-me
LEVERAGEGUARD_AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
LEVERAGEGUARD_AUTH_REFRESH_TOKEN_EXPIRE_MINUTES=10080
